            <padding android:left="@dimen/_10dp" android:top="4.0dip" android:right="@dimen/_10dp" android:bottom="4.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_button_outline_radius" />
            <solid android:color="@color/colorAccent" />
