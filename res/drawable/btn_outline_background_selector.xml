<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_button_outline_radius" />
            <solid android:color="@color/colorAccentTranslucent" />
            <stroke android:color="@color/colorAccent" />
            <padding android:left="@dimen/_18dp" android:top="@dimen/_10dp" android:right="@dimen/_18dp" android:bottom="@dimen/_8dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_button_outline_radius" />
            <solid android:color="@color/colorAccent" />
            <stroke android:color="@color/colorAccent" />
            <padding android:left="@dimen/_18dp" android:top="@dimen/_10dp" android:right="@dimen/_18dp" android:bottom="@dimen/_8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_button_outline_radius" />
            <solid android:color="@color/save_as_template_bg_color" />
            <stroke android:width="@dimen/_1dp" android:color="@color/colorAccent" />
            <padding android:left="@dimen/_18dp" android:top="@dimen/_10dp" android:right="@dimen/_18dp" android:bottom="@dimen/_8dp" />
        </shape>
    </item>
</selector>