<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="35" android:valueTo="0.0dip" android:valueType="floatType" android:propertyName="elevation" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="35" android:valueTo="4.0dip" android:valueType="floatType" android:propertyName="elevation" />
        </set>
    </item>
</selector>